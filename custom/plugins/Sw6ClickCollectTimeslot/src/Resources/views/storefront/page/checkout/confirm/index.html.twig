{% sw_extends '@Storefront/storefront/page/checkout/confirm/index.html.twig' %}

{% block page_checkout_confirm_shipping %}
    {{ parent() }}
    
    {% set timeslots = page.clickCollectTimeslots|default(['09:00-11:00', '11:00-13:00', '13:00-15:00']) %}
    {% set shippingMethodName = page.clickCollectShippingMethodName|default('Abholung im Store') %}
    
    <div class="click-collect-timeslot" data-click-collect style="display:none; margin-top: 20px;">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{ 'clickCollectTimeslot.header'|trans|sw_sanitize }}</h5>
                
                {% if timeslots|length > 0 %}
                    <div class="timeslot-options">
                        {% for timeslot in timeslots %}
                            <label class="form-check">
                                <input type="radio" name="sw_timeslot" value="{{ timeslot }}" class="form-check-input">
                                <span class="form-check-label">{{ timeslot }}</span>
                            </label>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted">{{ 'clickCollectTimeslot.noTimeslots'|trans|sw_sanitize }}</p>
                {% endif %}
            </div>
        </div>
        <div class="click-collect-notice" data-click-collect-notice></div>
    </div>
{% endblock %}
